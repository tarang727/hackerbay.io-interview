{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "pretty": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es5",
      "es2015",
      "es2015.promise",
      "es6",
      "es7"
    ],
    "outDir": "./out",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}